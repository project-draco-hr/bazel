{
  return builder.add(attr(":xcode_config",LABEL).allowedRuleClasses("xcode_config").checkConstraints().direct_compile_time_input().cfg(HOST).value(new LateBoundLabel<BuildConfiguration>(AppleCommandLineOptions.DEFAULT_XCODE_VERSION_CONFIG_LABEL,AppleConfiguration.class){
    @Override public Label getDefault(    Rule rule,    BuildConfiguration configuration){
      return configuration.getFragment(AppleConfiguration.class).getXcodeConfigLabel();
    }
  }
)).build();
}
