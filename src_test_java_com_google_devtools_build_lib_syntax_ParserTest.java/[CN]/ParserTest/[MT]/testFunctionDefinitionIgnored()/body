{
  List<Statement> stmts=parseFile("x = 1;\n" + "def foo(x, y, **z):\n" + "  # a comment\n"+ "  if true:"+ "    x = 2\n"+ "  foo(bar)\n"+ "  return z\n"+ "x = 3",true);
  assertThat(stmts).hasSize(2);
  stmts=parseFile("x = 1;\n" + "def foo(x, y, **z): return x\n" + "x = 3",true);
  assertThat(stmts).hasSize(2);
}
