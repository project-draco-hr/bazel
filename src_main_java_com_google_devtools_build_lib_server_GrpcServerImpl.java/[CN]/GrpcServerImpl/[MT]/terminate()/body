{
  server.shutdownNow();
  boolean interrupted=false;
  try {
    while (true) {
      try {
        server.awaitTermination();
        serving=false;
        return;
      }
 catch (      InterruptedException e) {
        interrupted=true;
      }
    }
  }
  finally {
    if (interrupted) {
      Thread.currentThread().interrupt();
    }
  }
}
