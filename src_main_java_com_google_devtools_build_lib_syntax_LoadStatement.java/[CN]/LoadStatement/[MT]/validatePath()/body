{
  String error=null;
  if (pathString.getValue().isEmpty()) {
    error="Path argument to load() must not be empty.";
  }
 else   if (pathString.getValue().startsWith("//")) {
    error="First argument of load() is a path, not a label. " + "It should start with a single slash if it is an absolute path.";
  }
 else   if (!importPath.isAbsolute() && importPath.segmentCount() > 1) {
    error=String.format("Path '%s' is not valid. " + "It should either start with a slash or refer to a file in the current directory.",importPath);
  }
  if (error != null) {
    throw new EvalException(getLocation(),error);
  }
}
