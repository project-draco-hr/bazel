{
  enqueue(new Runnable(){
    @Override public void run(){
      Profiler.instance().startTask(ProfilerTask.VFS_GLOB,this);
      try {
        reallyGlob(base,baseIsDir,patternParts,idx,excludeDirectories,results,cache,dirPred,syscalls);
      }
 catch (      IOException e) {
        failure.set(e);
      }
 finally {
        Profiler.instance().completeTask(ProfilerTask.VFS_GLOB);
      }
    }
    @Override public String toString(){
      return String.format("%s glob(include=[%s], exclude_directories=%s)",base.getPathString(),"\"" + Joiner.on("\", \"").join(patternParts) + "\"",excludeDirectories);
    }
  }
);
}
