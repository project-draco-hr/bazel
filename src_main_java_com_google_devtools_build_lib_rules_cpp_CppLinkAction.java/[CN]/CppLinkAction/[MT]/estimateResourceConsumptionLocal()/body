{
  ResourceSet minLinkResources=getLinkCommandLine().getLinkStaticness() == Link.LinkStaticness.DYNAMIC ? MIN_DYNAMIC_LINK_RESOURCES : MIN_STATIC_LINK_RESOURCES;
  final int inputSize=Iterables.size(getLinkCommandLine().getLinkerInputs()) + Iterables.size(getLinkCommandLine().getRuntimeInputs());
  return new ResourceSet(Math.max(inputSize * LINK_RESOURCES_PER_INPUT.getMemoryMb(),minLinkResources.getMemoryMb()),Math.max(inputSize * LINK_RESOURCES_PER_INPUT.getCpuUsage(),minLinkResources.getCpuUsage()),Math.max(inputSize * LINK_RESOURCES_PER_INPUT.getIoUsage(),minLinkResources.getIoUsage()));
}
