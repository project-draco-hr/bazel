{
  scratch.file("test/skylark/extension.bzl","def custom_rule_impl(ctx):","  ftb = set([ctx.file._attr2])","  return struct(runfiles = ctx.runfiles(), files = ftb)","","def attr_value(attr_map, cfg):","  return attr_map.attr1","","custom_rule = rule(implementation = custom_rule_impl,","  attrs = {'attr1': attr.label(allow_files=True),","          '_attr2': attr.label(default=attr_value, allow_files=True, single_file=True)})");
  scratch.file("test/skylark/BUILD","load('/test/skylark/extension', 'custom_rule')","","custom_rule(name = 'cr', attr1 = '//test/skylark:file')");
  ConfiguredTarget target=getConfiguredTarget("//test/skylark:cr");
  assertThat(ActionsTestUtil.baseArtifactNames(target.getProvider(FileProvider.class).getFilesToBuild())).containsExactly("file");
}
