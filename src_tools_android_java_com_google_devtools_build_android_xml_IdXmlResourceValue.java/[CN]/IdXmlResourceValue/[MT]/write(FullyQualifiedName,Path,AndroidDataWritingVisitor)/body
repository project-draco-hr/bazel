{
  String sourceString=String.format("<!-- %s -->",source);
  if (value == null) {
    mergedDataWriter.writeToValuesXml(key,ImmutableList.of(sourceString,String.format("<item type='id' name='%s'/>",key.name())));
  }
 else {
    mergedDataWriter.writeToValuesXml(key,ImmutableList.of(sourceString,String.format("<item type='id' name='%s'>%s</item>",key.name(),value)));
  }
}
