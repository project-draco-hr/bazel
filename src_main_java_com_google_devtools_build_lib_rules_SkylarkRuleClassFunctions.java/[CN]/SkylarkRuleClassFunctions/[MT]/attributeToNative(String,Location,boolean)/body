{
  if (oldName.isEmpty()) {
    throw new EvalException(loc,"Attribute name cannot be empty");
  }
  if (isLateBound) {
    if (oldName.charAt(0) != '_') {
      throw new EvalException(loc,"When an attribute value is a function, " + "the attribute must be private (start with '_')");
    }
    return ":" + oldName.substring(1);
  }
  if (oldName.charAt(0) == '_') {
    return "$" + oldName.substring(1);
  }
  return oldName;
}
