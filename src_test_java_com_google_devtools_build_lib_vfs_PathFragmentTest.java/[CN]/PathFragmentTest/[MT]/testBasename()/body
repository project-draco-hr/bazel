{
  assertEquals("bar",new PathFragment("foo/bar").getBaseName());
  assertEquals("bar",new PathFragment("/foo/bar").getBaseName());
  assertEquals("foo",new PathFragment("foo/").getBaseName());
  assertEquals("foo",new PathFragment("/foo/").getBaseName());
  assertEquals("foo",new PathFragment("foo").getBaseName());
  assertEquals("foo",new PathFragment("/foo").getBaseName());
  assertEquals("",new PathFragment("/").getBaseName());
  assertEquals("",new PathFragment("").getBaseName());
}
