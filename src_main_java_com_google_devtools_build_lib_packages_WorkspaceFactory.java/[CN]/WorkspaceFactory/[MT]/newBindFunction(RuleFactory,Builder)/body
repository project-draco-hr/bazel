{
  return new BuiltinFunction("bind",FunctionSignature.namedOnly(1,"name","actual"),BuiltinFunction.USE_LOC){
    public Object invoke(    String name,    String actual,    Location loc) throws EvalException, InterruptedException {
      Label nameLabel=null;
      try {
        nameLabel=Label.parseAbsolute("//external:" + name);
        try {
          RuleClass ruleClass=ruleFactory.getRuleClass("bind");
          builder.externalPackageData().addBindRule(builder,ruleClass,nameLabel,actual == null ? null : Label.parseAbsolute(actual),loc);
        }
 catch (        RuleFactory.InvalidRuleException|Package.NameConflictException|LabelSyntaxException e) {
          throw new EvalException(loc,e.getMessage());
        }
      }
 catch (      LabelSyntaxException e) {
        throw new EvalException(loc,e.getMessage());
      }
      return NONE;
    }
  }
;
}
