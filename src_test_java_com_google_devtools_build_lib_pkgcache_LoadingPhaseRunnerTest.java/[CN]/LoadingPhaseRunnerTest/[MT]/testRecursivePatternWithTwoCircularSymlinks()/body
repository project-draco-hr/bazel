{
  tester.getWorkspace().getChild("broken").createDirectory();
  tester.getWorkspace().getRelative(new PathFragment("broken/BUILD")).createSymbolicLink(new PathFragment("x"));
  tester.getWorkspace().getRelative(new PathFragment("broken/x")).createSymbolicLink(new PathFragment("BUILD"));
  assertCircularSymlinksDuringTargetParsing("//broken/...");
}
