{
  if (ruleContext != null && ruleContext.getFragment(CppConfiguration.class).needsIncludeScanning() && !prerequisite.isSourceArtifact() && CPP_FILETYPES.matches(prerequisite.getFilename())) {
    Artifact scanned=getIncludesOutput(ruleContext,prerequisite);
    ruleContext.registerAction(new ExtractInclusionAction(ruleContext.getActionOwner(),prerequisite,scanned));
    return scanned;
  }
  return null;
}
