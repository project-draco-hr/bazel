{
  context.registerAction(new SpawnAction.Builder().addInput(input).addTransitiveInputs(CppHelper.getToolchain(context).getStrip()).addOutput(output).useDefaultShellEnvironment().setExecutable(cppConfiguration.getStripExecutable()).addArguments("-S","-p","-o",output.getExecPathString()).addArguments("-R",".gnu.switches.text.quote_paths").addArguments("-R",".gnu.switches.text.bracket_paths").addArguments("-R",".gnu.switches.text.system_paths").addArguments("-R",".gnu.switches.text.cpp_defines").addArguments("-R",".gnu.switches.text.cpp_includes").addArguments("-R",".gnu.switches.text.cl_args").addArguments("-R",".gnu.switches.text.lipo_info").addArguments("-R",".gnu.switches.text.annotation").addArguments(cppConfiguration.getStripOpts()).addArgument(input.getExecPathString()).setProgressMessage("Stripping " + output.prettyPrint() + " for "+ context.getLabel()).setMnemonic("CcStrip").build(context));
}
