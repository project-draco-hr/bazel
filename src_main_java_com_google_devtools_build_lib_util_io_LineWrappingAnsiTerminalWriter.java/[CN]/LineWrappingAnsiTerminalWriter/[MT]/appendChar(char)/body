{
  if (c == '\n') {
    terminalWriter.newline();
    position=0;
  }
 else   if (position + 2 < width) {
    terminalWriter.append(Character.toString(c));
    position++;
  }
 else {
    terminalWriter.append(new String(new char[]{c,continuationCharacter}));
    terminalWriter.newline();
    position=0;
  }
}
