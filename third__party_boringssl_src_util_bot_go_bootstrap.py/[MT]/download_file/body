def download_file(url, path):
    'Fetches |url| to |path|.'
    last_progress = [0]

    def report(a, b, c):
        progress = int((((a * b) * 100.0) / c))
        if (progress != last_progress[0]):
            print  >> sys.stderr, ('Downloading... %d%%' % progress)
            last_progress[0] = progress
    urllib.urlretrieve(url, path, reporthook=report)
