{
  assertIllegalPattern("(illegal) pattern");
  assertIllegalPattern("[illegal pattern");
  assertIllegalPattern("}illegal pattern");
  assertIllegalPattern("foo**bar");
  assertIllegalPattern("");
  assertIllegalPattern(".");
  assertIllegalPattern("/foo");
  assertIllegalPattern("./foo");
  assertIllegalPattern("foo/");
  assertIllegalPattern("foo/./bar");
  assertIllegalPattern("../foo/bar");
  assertIllegalPattern("foo//bar");
}
