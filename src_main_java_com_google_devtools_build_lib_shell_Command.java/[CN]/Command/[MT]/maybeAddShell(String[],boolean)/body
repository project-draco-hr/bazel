{
  if (useShell) {
    final StringBuilder builder=new StringBuilder();
    for (    final String element : commandLineElements) {
      if (builder.length() > 0) {
        builder.append(' ');
      }
      builder.append(element);
    }
    return Shell.getPlatformShell().shellify(builder.toString());
  }
 else {
    return commandLineElements;
  }
}
