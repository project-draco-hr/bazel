{
  ClasspathType type=isNeverLink ? ClasspathType.COMPILE_ONLY : ClasspathType.BOTH;
  JavaCompilationArgs.Builder builder=JavaCompilationArgs.builder().merge(getJavaCompilationArtifacts(),isNeverLink).addTransitiveTargets(getExports(ruleContext),recursive,type);
  if (recursive) {
    builder.addTransitiveTargets(targetsTreatedAsDeps(ClasspathType.COMPILE_ONLY),recursive,type).addTransitiveTargets(getRuntimeDeps(ruleContext),recursive,ClasspathType.RUNTIME_ONLY).addSourcesTransitiveCompilationArgs(compilationArgsFromSources,recursive,type);
  }
  return builder.build();
}
