{
  assertThat(RepositoryName.create("@foo").getPathUnderExecRoot()).isEqualTo(new PathFragment("../foo"));
  assertThat(RepositoryName.create("@").getPathUnderExecRoot()).isEqualTo(PathFragment.EMPTY_FRAGMENT);
  assertThat(RepositoryName.create("").getPathUnderExecRoot()).isEqualTo(PathFragment.EMPTY_FRAGMENT);
}
