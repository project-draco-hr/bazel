{
  excludedTools=ImmutableList.<CppConfiguration.Tool>builder().add(excludedTools).add(CppConfiguration.Tool.GCC).build().toArray(new CppConfiguration.Tool[excludedTools.length + 1]);
  return ImmutableList.<ToolPath>builder().addAll(createToolpaths(toolchainName,targetPlatform,excludedTools)).add(ToolPath.newBuilder().setName("gcc").setPath(createToolPath("llvm-" + llvmVersion,"clang")).build()).build();
}
