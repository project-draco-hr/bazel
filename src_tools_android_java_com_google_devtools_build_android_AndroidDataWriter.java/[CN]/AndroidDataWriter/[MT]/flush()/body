{
  for (  Entry<String,Map<FullyQualifiedName,Iterable<String>>> entry : valueFragments.entrySet()) {
    writeTasks.add(executorService.submit(new WriteValuesXmlTask(resourceDirectory().resolve(entry.getKey()),entry.getValue())));
  }
  FailedFutureAggregator.forIOExceptionsWithMessage("Failures during writing.").aggregateAndMaybeThrow(writeTasks);
  writeTasks.clear();
  valueFragments.clear();
}
