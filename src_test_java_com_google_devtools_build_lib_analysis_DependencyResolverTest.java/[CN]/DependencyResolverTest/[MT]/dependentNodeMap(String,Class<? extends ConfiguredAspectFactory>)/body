{
  AspectDefinition aspectDefinition=aspect == null ? null : AspectFactory.Util.create(aspect).getDefinition();
  Target target=packageManager.getTarget(reporter,Label.parseAbsolute(targetName));
  return dependencyResolver.dependentNodeMap(new TargetAndConfiguration(target,getTargetConfiguration()),getHostConfiguration(),aspectDefinition,AspectParameters.EMPTY,ImmutableSet.<ConfigMatchingProvider>of());
}
