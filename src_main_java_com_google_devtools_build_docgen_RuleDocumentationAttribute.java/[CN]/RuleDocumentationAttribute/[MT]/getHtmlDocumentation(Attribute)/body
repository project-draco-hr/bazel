{
  if (attribute == null) {
    return htmlDocumentation;
  }
  StringBuilder sb=new StringBuilder().append("<i>(").append(TYPE_DESC.get(attribute.getType())).append("; " + (attribute.isMandatory() ? "required" : "optional")).append(getDefaultValue(attribute)).append(")</i><br/>\n");
  return htmlDocumentation.replace("${" + DocgenConsts.VAR_SYNOPSIS + "}",sb.toString());
}
