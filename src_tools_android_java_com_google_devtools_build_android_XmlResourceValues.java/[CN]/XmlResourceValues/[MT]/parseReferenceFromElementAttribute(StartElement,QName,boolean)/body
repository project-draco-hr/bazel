{
  String value=getElementAttributeByName(element,name);
  if (value == null) {
    return null;
  }
  if (value.startsWith("?") || value.startsWith("@")) {
    return value.substring(1);
  }
  if (!requiresPrefix) {
    return value;
  }
  throw new XMLStreamException(String.format("Invalid resource reference from %s in %s",name,element),element.getLocation());
}
