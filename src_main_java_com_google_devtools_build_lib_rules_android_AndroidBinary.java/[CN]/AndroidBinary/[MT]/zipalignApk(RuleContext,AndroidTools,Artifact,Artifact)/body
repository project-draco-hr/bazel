{
  List<String> args=new ArrayList<>();
  args.add("4");
  args.add(signedApk.getExecPathString());
  args.add(zipAlignedApk.getExecPathString());
  ruleContext.registerAction(new SpawnAction.Builder().addInput(signedApk).addOutput(zipAlignedApk).setExecutable(tools.getZipalign()).addArguments(args).setProgressMessage("Zipaligning apk").setMnemonic("AndroidZipAlign").build(ruleContext));
  args.add(signedApk.getExecPathString());
  args.add(zipAlignedApk.getExecPathString());
  return zipAlignedApk;
}
