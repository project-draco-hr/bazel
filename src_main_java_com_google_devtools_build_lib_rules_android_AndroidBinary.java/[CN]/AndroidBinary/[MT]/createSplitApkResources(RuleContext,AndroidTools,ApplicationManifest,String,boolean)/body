{
  Artifact splitManifest=mainManifest.createSplitManifest(ruleContext,splitName,hasCode).getManifest();
  Artifact splitResources=getDxArtifact(ruleContext,"split_" + splitName + ".ap_");
  ruleContext.registerAction(new SpawnAction.Builder().setExecutable(tools.getAapt()).setMnemonic("AndroidAapt").setProgressMessage("Generating resource apk for split " + splitName).addArgument("package").addArgument("-F").addOutputArgument(splitResources).addArgument("-M").addInputArgument(splitManifest).addArgument("-I").addInputArgument(tools.getAndroidJar()).build(ruleContext));
  return splitResources;
}
