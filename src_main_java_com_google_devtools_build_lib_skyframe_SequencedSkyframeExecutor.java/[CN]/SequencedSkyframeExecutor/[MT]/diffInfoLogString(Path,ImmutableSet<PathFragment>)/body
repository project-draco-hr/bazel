{
  int numModified=modifiedFileSet.size();
  StringBuilder result=new StringBuilder("DiffAwareness found ").append(numModified).append(" modified source files for ").append(pathEntry.getPathString());
  if (numModified > 0) {
    Iterable<String> trimmed=PathFragment.safePathStrings(Iterables.limit(modifiedFileSet,5));
    result.append(": ").append(Joiner.on(", ").join(trimmed));
    if (numModified > 5) {
      result.append(", ...");
    }
  }
  return result.toString();
}
