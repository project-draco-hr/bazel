{
  if (workerPool != null && buildRequest != null && buildRequest.getOptions(WorkerOptions.class) != null && buildRequest.getOptions(WorkerOptions.class).workerQuitAfterBuild) {
    if (verbose) {
      env.getReporter().handle(Event.info("Build completed, shutting down worker pool..."));
    }
    workerPool.close();
    workerPool=null;
  }
}
