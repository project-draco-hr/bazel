{
  Attribute attributeDefinition=getRule().getAttributeDefinition(attributeName);
  if ((mode == Mode.TARGET) && (attributeDefinition.getConfigurationTransition() instanceof SplitTransition)) {
    checkAttribute(attributeName,Mode.SPLIT);
    Map<String,? extends List<? extends TransitiveInfoCollection>> map=getSplitPrerequisites(attributeName,false);
    return map.isEmpty() ? ImmutableList.<TransitiveInfoCollection>of() : map.entrySet().iterator().next().getValue();
  }
  checkAttribute(attributeName,mode);
  return targetMap.get(attributeName);
}
