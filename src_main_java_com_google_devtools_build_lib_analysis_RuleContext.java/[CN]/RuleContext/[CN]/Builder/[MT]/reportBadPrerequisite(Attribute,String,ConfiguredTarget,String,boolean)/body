{
  String msgPrefix=targetKind != null ? targetKind + " " : "";
  String msgReason=reason != null ? " (" + reason + ")" : "";
  if (isWarning) {
    attributeWarning(attribute.getName(),String.format("%s'%s'%s is unexpected here%s; continuing anyway",msgPrefix,prerequisite.getLabel(),AliasProvider.printVisibilityChain(prerequisite),msgReason));
  }
 else {
    attributeError(attribute.getName(),String.format("%s'%s'%s is misplaced here%s",msgPrefix,prerequisite.getLabel(),AliasProvider.printVisibilityChain(prerequisite),msgReason));
  }
}
