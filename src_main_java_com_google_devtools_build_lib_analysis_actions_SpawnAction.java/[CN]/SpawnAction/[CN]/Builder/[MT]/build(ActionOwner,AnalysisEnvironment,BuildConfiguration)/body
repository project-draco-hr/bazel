{
  Iterable<String> arguments=argumentsBuilder.build();
  Artifact paramsFile=ParamFileHelper.getParamsFileMaybe(buildExecutableArgs(configuration.getShExecutable()),arguments,commandLine,paramFileInfo,configuration,analysisEnvironment,outputs);
  List<Action> actions=new ArrayList<>(2);
  actions.add(buildSpawnAction(owner,configuration.getLocalShellEnvironment(),configuration.getShExecutable(),paramsFile));
  if (paramsFile != null) {
    actions.add(ParamFileHelper.createParameterFileWriteAction(arguments,commandLine,owner,paramsFile,paramFileInfo));
  }
  return actions.toArray(new Action[actions.size()]);
}
