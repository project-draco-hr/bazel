def IterateZip(path):
    '\n  IterateZip opens the zip file at path and returns a generator of\n  (filename, mode, fileobj) tuples for each file in it.\n  '
    with zipfile.ZipFile(path, 'r') as zip_file:
        for info in zip_file.infolist():
            if info.filename.endswith('/'):
                continue
            yield (info.filename, None, zip_file.open(info))
