def IterateTar(path):
    '\n  IterateTar opens the tar.gz file at path and returns a generator of\n  (filename, mode, fileobj) tuples for each file in it.\n  '
    with tarfile.open(path, 'r:gz') as tar_file:
        for info in tar_file:
            if info.isdir():
                continue
            if (not info.isfile()):
                raise ValueError(('Unknown entry type "%s"' % (info.name,)))
            yield (info.name, info.mode, tar_file.extractfile(info))
