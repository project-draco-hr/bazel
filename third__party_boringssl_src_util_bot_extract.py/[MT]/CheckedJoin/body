def CheckedJoin(output, path):
    "\n  CheckedJoin returns os.path.join(output, path). It does sanity checks to\n  ensure the resulting path is under output, but shouldn't be used on untrusted\n  input.\n  "
    path = os.path.normpath(path)
    if (os.path.isabs(path) or path.startswith('.')):
        raise ValueError(path)
    return os.path.join(output, path)
