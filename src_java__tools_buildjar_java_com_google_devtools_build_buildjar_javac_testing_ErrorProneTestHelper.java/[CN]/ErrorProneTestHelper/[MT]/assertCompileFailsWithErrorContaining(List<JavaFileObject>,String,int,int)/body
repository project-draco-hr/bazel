{
  List<Diagnostic<? extends JavaFileObject>> diagnostics=assertCompileFailsWithOneError(sources);
  Diagnostic<? extends JavaFileObject> diagnostic=diagnostics.get(0);
  assertWithMessage("Wrong error message").that(diagnostic.getMessage(null)).containsMatch(expectedErrorRegex);
  assertEquals("Wrong line number",line,diagnostic.getLineNumber());
  assertEquals("Wrong column number",col,diagnostic.getColumnNumber());
}
