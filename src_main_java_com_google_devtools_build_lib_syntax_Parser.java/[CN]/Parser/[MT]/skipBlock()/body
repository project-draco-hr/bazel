{
  int start=token.left;
  Token blockToken=token;
  syncTo(EnumSet.of(TokenKind.COLON,TokenKind.EOF));
  if (parsingMode == BUILD) {
    reportError(lexer.createLocation(start,token.right),"syntax error at '" + blockToken + "': This Python-style construct is not supported. "+ Constants.PARSER_ERROR_EXTENSION_NEEDED);
  }
  expect(TokenKind.COLON);
  skipSuite();
}
