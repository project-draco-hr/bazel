def add_file(self, f, destfile, mode=None):
    'Add a file to the layer.\n\n    Args:\n       f: the file to add to the layer\n       destfile: the name of the file in the layer\n       mode: force to set the specified mode, by\n          default the value from the source is taken.\n    `f` will be copied to `self.directory/destfile` in the layer.\n    '
    dest = destfile.lstrip('/')
    if (self.directory and (self.directory != '/')):
        dest = ((self.directory.lstrip('/') + '/') + dest)
    if (mode is None):
        mode = (493 if os.access(f, os.X_OK) else 420)
    self.tarfile.add_file(dest, file_content=f, mode=mode)
