def add_file(self, f, destfile):
    'Add a file to the layer.\n\n    Args:\n       f: the file to add to the layer\n       destfile: the name of the file in the layer\n\n    `f` will be copied to `self.directory/destfile` in the layer.\n    '
    dest = destfile
    if self.directory:
        dest = ((self.directory + '/') + dest)
    dest = dest.lstrip('/')
    self.tarfile.add_file(dest, file_content=f)
