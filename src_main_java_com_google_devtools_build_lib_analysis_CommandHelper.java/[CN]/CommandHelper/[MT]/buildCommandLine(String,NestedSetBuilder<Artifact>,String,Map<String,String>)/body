{
  PathFragment shellPath=executionInfo.containsKey("requires-darwin") ? new PathFragment("/bin/bash") : ruleContext.getConfiguration().getShExecutable();
  Pair<List<String>,Artifact> argvAndScriptFile=buildCommandLineMaybeWithScriptFile(ruleContext,command,scriptPostFix,shellPath);
  if (argvAndScriptFile.second != null) {
    inputs.add(argvAndScriptFile.second);
  }
  return argvAndScriptFile.first;
}
