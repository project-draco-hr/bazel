{
  Thread threadToWaitFor=null;
synchronized (this) {
    if (updateThread != null) {
      threadToWaitFor=updateThread;
      updateThread=null;
    }
  }
  if (threadToWaitFor != null) {
    threadToWaitFor.interrupt();
    try {
      threadToWaitFor.join();
    }
 catch (    InterruptedException e) {
    }
  }
}
